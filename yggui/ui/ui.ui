<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adw" version="1.0"/>

  <object class="GtkApplicationWindow" id="main_window">
    <property name="accessible-role">meter</property>
    <property name="decorated">False</property>
    <property name="title"> </property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <child>
          <object class="GtkHeaderBar" id="header">
            <child type="title">
              <object class="GtkBox" id="nav_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>

                <child>
                  <object class="GtkButton" id="main_button">
                    <property name="label">Main</property>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="settings_button">
                    <property name="label">Settings</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkStack" id="stack">

            <child>
              <object class="GtkBox" id="main">
                <property name="orientation">vertical</property>

                <child>
                  <object class="GtkBox" id="switch_box">
                    <property name="halign">center</property>
                    <property name="margin-top">10</property>
                    <child>
                      <object class="GtkLabel" id="switch_label">
                        <property name="label">Enable Yggdrasil</property>
                        <property name="margin-end">10</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSwitch" id="switch1"/>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="address_label">
                    <property name="halign">center</property>
                    <property name="css-classes">info-line</property>
                    <property name="label">IPv6 Address:  –</property>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="subnet_label">
                    <property name="halign">center</property>
                    <property name="css-classes">info-line</property>
                    <property name="label">IPv6 Subnet:   –</property>
                    <property name="margin-bottom">10</property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkBox" id="settings">
                <property name="orientation">vertical</property>

                <child>
                  <object class="AdwClamp">
                    <child>
                      <object class="AdwPreferencesGroup">
                        <child>
                          <object class="AdwActionRow" id="private_key_row">
                            <property name="title">PrivateKey</property>
                            <child type="suffix">
                              <object class="GtkEntry" id="private_key_entry">
                                <property name="hexpand">True</property>
                                <property name="editable">False</property>
                              </object>
                            </child>

                            <child type="suffix">
                              <object class="GtkButton" id="edit_private_key_button">
                                <property name="icon-name">document-edit-symbolic</property>
                              </object>
                            </child>

                            <child type="suffix">
                              <object class="GtkButton" id="reset_private_key_button">
                                <property name="icon-name">view-refresh-symbolic</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwExpanderRow" id="peers_card">
                            <property name="title">Peers</property>
                            <property name="expanded">False</property>

                            <child>
                              <object class="GtkBox" id="peers_box">
                                <property name="orientation">vertical</property>
                                <property name="halign">center</property>
                                <property name="margin-top">6</property>
                                <property name="margin-bottom">6</property>
                                <property name="spacing">6</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>
      </object>
    </child>
  </object>
</interface>

