<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adw" version="1.0"/>

  <object class="GtkApplicationWindow" id="main_window">
    <property name="accessible-role">meter</property>
    <property name="decorated">False</property>
    <property name="title"> </property>

    <child>
      <object class="AdwToolbarView" id="toolbar_view">

        <!-- Header/navigation -->
        <child type="top">
          <object class="GtkHeaderBar" id="header">
            <child type="title">
              <object class="GtkBox" id="nav_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>

                <child>
                  <object class="GtkButton" id="main_button">
                    <property name="label">Main</property>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="settings_button">
                    <property name="label">Settings</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Main content -->
        <property name="content">
          <object class="GtkStack" id="stack">

            <!-- MAIN PAGE -->
            <child>
              <object class="GtkBox" id="main">
                <property name="orientation">vertical</property>
                <property name="margin-top">12</property>

                <child>
                  <object class="AdwClamp" id="main_clamp">
                    <child>
                      <object class="AdwPreferencesGroup" id="main_group">

                        <child>
                          <object class="AdwExpanderRow" id="ygg_card">
                            <property name="title">Yggdrasil</property>
                            <property name="subtitle">Stopped</property>
                            <property name="expanded">False</property>

                            <child type="suffix">
                              <object class="GtkSwitch" id="ygg_switch">
                                <property name="active">False</property>
                                <property name="valign">center</property>
                              </object>
                            </child>

                            <child>
                              <object class="GtkBox" id="ipv6_box">
                                <property name="orientation">vertical</property>
                                <property name="spacing">6</property>

                                <child>
                                  <object class="AdwActionRow" id="address_row">
                                    <property name="title">IPv6 Address</property>
                                    <property name="subtitle">–</property>
                                    <property name="activatable">True</property>
                                    <child type="suffix">
                                      <object class="GtkImage" id="address_copy_icon">
                                        <property name="icon-name">edit-copy-symbolic</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>

                                <child>
                                  <object class="AdwActionRow" id="subnet_row">
                                    <property name="title">IPv6 Subnet</property>
                                    <property name="subtitle">–</property>
                                    <property name="activatable">True</property>
                                    <child type="suffix">
                                      <object class="GtkImage" id="subnet_copy_icon">
                                        <property name="icon-name">edit-copy-symbolic</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- SETTINGS PAGE -->
            <child>
              <object class="GtkBox" id="settings">
                <property name="orientation">vertical</property>
                <property name="margin-top">12</property>

                <child>
                  <object class="AdwClamp" id="settings_clamp">
                    <child>
                      <object class="AdwPreferencesGroup" id="settings_group">

                        <child>
                          <object class="AdwEntryRow" id="private_key_row">
                            <property name="title">PrivateKey</property>
                            <property name="text"></property>
                            <property name="hexpand">True</property>

                            <child type="suffix">
                              <object class="GtkImage" id="private_key_regen_icon">
                                <property name="icon-name">view-refresh-symbolic</property>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- Peers list -->
                        <child>
                          <object class="AdwExpanderRow" id="peers_card">
                            <property name="title">Peers</property>
                            <property name="subtitle">No peers configured</property>

                            <child>
                              <object class="GtkBox" id="peers_container">
                                <property name="orientation">vertical</property>
                                <property name="spacing">6</property>

                                <child>
                                  <object class="GtkListBox" id="peers_box">
                                    <property name="show-separators">True</property>
                                    <property name="css-classes">boxed-list</property>
                                    <property name="selection-mode">none</property>
                                    <property name="margin-top">6</property>
                                    <property name="margin-bottom">6</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkButton" id="add_peer_btn">
                                    <property name="label">Add peer</property>
                                    <property name="css-classes">suggested-action</property>
                                    <property name="hexpand">True</property>
                                    <property name="halign">fill</property>
                                  </object>
                                </child>

                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </property>

      </object>
    </child>
  </object>
</interface>

