<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adw" version="1.0"/>

  <object class="AdwApplicationWindow" id="main_window">
    <property name="accessible-role">meter</property>
    <property name="title"> </property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>

    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">
        <property name="child">
          <object class="AdwToolbarView" id="toolbar_view">

            <!-- Header/navigation -->
            <child type="top">
              <object class="GtkHeaderBar" id="header">
                <child type="title">
                  <object class="GtkBox" id="nav_box">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">12</property>

                    <child>
                      <object class="GtkButton" id="main_button">
                        <property name="label">Main</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkButton" id="settings_button">
                        <property name="label">Settings</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Main content -->
            <property name="content">
              <object class="GtkStack" id="stack">

                <!-- MAIN PAGE -->
                <child>
                  <object class="GtkBox" id="main">
                    <property name="orientation">vertical</property>
                    <property name="margin-top">12</property>

                    <child>
                      <object class="AdwClamp" id="main_clamp">
                        <child>
                          <object class="AdwPreferencesGroup" id="main_group">

                            <child>
                              <object class="AdwExpanderRow" id="ygg_card">
                                <property name="title">Yggdrasil</property>
                                <property name="subtitle">Stopped</property>
                                <property name="expanded">False</property>

                                <child type="suffix">
                                  <object class="GtkSwitch" id="ygg_switch">
                                    <property name="active">False</property>
                                    <property name="valign">center</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkBox" id="ipv6_box">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="AdwActionRow" id="address_row">
                                        <property name="title">IPv6 Address</property>
                                        <property name="subtitle">–</property>
                                        <property name="activatable">True</property>
                                        <child type="suffix">
                                          <object class="GtkImage" id="address_copy_icon">
                                            <property name="icon-name">edit-copy-symbolic</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="AdwActionRow" id="subnet_row">
                                        <property name="title">IPv6 Subnet</property>
                                        <property name="subtitle">–</property>
                                        <property name="activatable">True</property>
                                        <child type="suffix">
                                          <object class="GtkImage" id="subnet_copy_icon">
                                            <property name="icon-name">edit-copy-symbolic</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>

                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- SETTINGS PAGE -->
                <child>
                  <object class="GtkBox" id="settings">
                    <property name="orientation">vertical</property>
                    <property name="margin-top">12</property>

                    <child>
                      <object class="AdwClamp" id="settings_clamp">
                        <child>
                          <object class="AdwPreferencesGroup" id="settings_group">

                            <child>
                              <object class="AdwEntryRow" id="private_key_row">
                                <property name="title">PrivateKey</property>
                                <property name="text"></property>
                                <property name="hexpand">True</property>

                                <child type="suffix">
                                  <object class="GtkButton" id="private_key_regen_icon">
                                    <property name="css-classes">flat</property>
                                    <property name="focus-on-click">False</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">view-refresh-symbolic</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <!-- Peers list -->
                            <child>
                              <object class="AdwExpanderRow" id="peers_card">
                                <property name="title">Peers</property>
                                <property name="subtitle">No peers configured</property>

                                <child>
                                  <object class="GtkBox" id="peers_container">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="GtkListBox" id="peers_box">
                                        <property name="show-separators">True</property>
                                        <property name="css-classes">boxed-list</property>
                                        <property name="selection-mode">none</property>
                                        <property name="margin-top">6</property>
                                        <property name="margin-bottom">6</property>
                                        <child>
                                          <object class="AdwButtonRow" id="add_peer_btn">
                                            <property name="title" translatable="yes">Add Peer</property>
                                            <property name="start-icon-name">list-add-symbolic</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>

                                  </object>
                                </child>
                              </object>
                            </child>

                            <!-- SOCKS proxy settings -->
                            <child>
                              <object class="AdwExpanderRow" id="socks_card">
                                <property name="title">SOCKS Proxy</property>
                                <property name="subtitle">Disabled</property>
                                <child type="suffix">
                                  <object class="GtkSwitch" id="socks_switch">
                                    <property name="active">False</property>
                                    <property name="valign">center</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox" id="socks_box">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="AdwEntryRow" id="socks_listen_row">
                                        <property name="title">Listen (IP:Port)</property>
                                        <property name="text">127.0.0.1:1080</property>
                                        <property name="visible">False</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="AdwEntryRow" id="socks_dns_ip_row">
                                        <property name="title">DNS Server</property>
                                        <property name="text"></property>
                                        <property name="visible">False</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="AdwEntryRow" id="socks_dns_port_row">
                                        <property name="title">DNS Port</property>
                                        <property name="text">53</property>
                                        <property name="visible">False</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>
                              </object>
                            </child>

                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </object>
</interface>
